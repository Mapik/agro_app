<% provide(:title, "Maszyny") %>

<div "equipment-index">
  <nav class="breadcrumbs">
    <%= link_to "Strona główna", root_path %>
    <a class="current" href="#">Maszyny</a>
  </nav> <!--END OF breadcrumbs -->

  <% if user_active_equipments.count == 0 %>
    <div class="no-equipment">
      <div class="row">
        <div class="panel clearfix"> 
          <h2><small>Nie dodałeś jeszcze żadnej maszyny.</small></h2>
          <h3><small>Wykorzystaj przycisk "Dodaj maszynę", który znajduje się poniżej
            w celu dodania swojego pierwszej maszyny.</small></h3>  
        </div>
      </div>
    </div> <!--END OF no-equipment-->
  <% end %>

  <div class="sign-up-errors">
    <div class="row">
      <%= render 'shared/error_messages', object: @equipment %>
    </div>
  </div><!--END OF sign-up-errors-->


  <div class="equipment">
    <%= render 'equipmentsindex' %>
  </div><!--END OF equipments-->

  <div class="add-equipment">
    <%= render 'addequipment' %>
  </div><!--END OF add-equipment-->


</div><!--END OF equipment-index-->
