<% user_active_mobs.each do |mob| %>
    <% if (user_active_mobs.index(mob)+1) % 3 == 1 %>
      <div class="row">
    <%  end %>
        <div class="large-4 columns">
          <%= link_to mob do %>
          <div class="panel clearfix"> 
            <h2><small>Nazwa stada: <span><%= mob.name %></span></small></h2>
            <% @mobtype = Mobtype.where(id: mob.mobtype_id).first %>
            <h3><small>Rodzaj:  <%= @mobtype.name %> </small></h3>
          </div>
          <% end %>
        </div>
        <% if (user_active_mobs.index(mob)+1) % 3 == 1 %>
        <div class="large-4 columns">
        </div>
        <div class="large-4 columns">
        </div>
        <%  end %>
        <% if (user_active_mobs.index(mob)+1) % 3 == 2 %>
        <div class="large-4 columns">
        </div>
        <%  end %>
            
    <% if (user_active_mobs.index(mob)+1) % 3 == 0 || (user_active_mobs.index(mob)+1) == user_active_mobs.count %>
      </div>
    <%  end %>
<% end %>


