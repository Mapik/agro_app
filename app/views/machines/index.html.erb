<% provide(:title, "Maszyny") %>

<div "machine-index">
  <nav class="breadcrumbs">
    <%= link_to "Strona główna", root_path %>
    <a class="current" href="#">Maszyny</a>
  </nav> <!--END OF breadcrumbs -->

  <% if user_active_machines.count == 0 %>
    <div class="no-machine">
      <div class="row">
        <div class="large-12 columns">
          <div class="panel clearfix"> 
            <h2><small>Nie dodałeś jeszcze żadnej maszyny.</small></h2>
            <h3><small>Wykorzystaj przycisk "Dodaj maszynę", który znajduje się poniżej
              w celu dodania swojej pierwszej maszyny.</small></h3>  
          </div>
        </div>
      </div>
    </div> <!--END OF no-machine-->
  <% end %>

  <div class="sign-up-errors">
    <div class="row">
      <%= render 'shared/error_messages', object: @machine %>
    </div>
  </div><!--END OF sign-up-errors-->


  <div class="machine">
    <%= render 'machinesindex' %>
  </div><!--END OF machine-->

  <div class="add-machine">
    <%= render 'addmachine' %>
  </div><!--END OF add-machine-->

</div><!--END OF machine-index-->
