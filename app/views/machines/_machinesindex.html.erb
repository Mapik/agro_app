<% user_active_machines.each do |machine| %>
    <% if (user_active_machines.index(machine)+1) % 3 == 1 %>
      <div class="row">
    <%  end %>
        <div class="large-4 columns">
          <%= link_to machine do %>
          <div class="panel clearfix"> 
            <h2><small>Nazwa: <span><%= machine.name %></span></small></h2>
            <h3><small>Typ: <%= machine_type(machine).name %></small></h3>
          </div>
          <% end %>
        </div>
        <% if (user_active_machines.index(machine)+1) % 3 == 1 %>
        <div class="large-4 columns">
        </div>
        <div class="large-4 columns">
        </div>
        <%  end %>
        <% if (user_active_machines.index(machine)+1) % 3 == 2 %>
        <div class="large-4 columns">
        </div>
        <%  end %>
            
    <% if (user_active_machines.index(machine)+1) % 3 == 0 || 
      (user_active_machines.index(machine)+1) == user_active_machines.count %>
      </div>
    <%  end %>
<% end %>


