<% provide(:title, "Budynki") %>

<div "building-index">
  <nav class="breadcrumbs">
    <%= link_to "Strona główna", root_path %>
    <a class="current" href="#">Budynki</a>
  </nav> <!--END OF breadcrumbs -->

  <% if user_active_buildings.count == 0 %>
    <div class="no-building">
      <div class="row">
        <div class="panel clearfix"> 
          <h2><small>Nie dodałeś jeszcze żadnego budynku.</small></h2>
          <h3><small>Wykorzystaj przycisk "Dodaj budynek", który znajduje się poniżej
            w celu dodania swojego pierwszego budynku.</small></h3>  
        </div>
      </div>
    </div> <!--END OF no-building-->
  <% end %>

  <div class="sign-up-errors">
    <div class="row">
      <%= render 'shared/error_messages', object: @building %>
    </div>
  </div><!--END OF sign-up-errors-->


  <div class="buildings">
    <%= render 'buildingsindex' %>
  </div><!--END OF buildings-->

  <div class="add-building">
    <%= render 'addbuilding' %>
  </div><!--END OF add-building-->

</div><!--END OF building-index-->
